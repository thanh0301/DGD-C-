@using DGD.Models
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/CSS/Admin.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/CSS/TCAdmin.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body style="display:flex;grid-gap:30px;">
    <header style="height: 850px; width: 200px;position:fixed;padding:20px 20px;">

        <li style="list-style:none; font-size:20px" class="item__list__menu"><a href="@Url.Action("SanPham","Admin")">Sản phẩm</a></li>
        <li style="list-style: none; font-size: 20px" class="item__list__menu"><a href="@Url.Action("DanhMuc","Admin")">Danh mục</a></li>
        <li style="list-style: none; font-size: 20px" class="item__list__menu"><a href="@Url.Action("LoaiSanPham","Admin")">Loại sản phẩm</a></li>
        <li style="list-style: none; font-size: 20px" class="item__list__menu"><a href="@Url.Action("QLDonHang","Admin")">Đơn hàng</a></li>
    </header>
    <div class="Admin__right">
        @{
            var admin = (Admin)Session["Taikhoanadmin"];
            if (admin != null)
            {
                <a style="text-decoration:none;color:black;" class="TT__Admin" href="">Xin chào : @admin.taikhoan</a>
                <ul style="list-style:none;" class="dropdown">
                    <li><a style="text-decoration: none; color: black;"href="@Url.Action("LogOff","Nguoidung")">Đăng xuất</a></li>

                </ul>

            }
        }
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
    </footer>
</body>
</html>
