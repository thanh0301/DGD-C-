
@{
    ViewBag.Title = "Trangchu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background:#eee;
    }
    .container {
        display: flex;
    }

    .body_head {
        display: flex;
        margin: 30px 30px;
        justify-content: space-around;
    }

    .item_product {
        display: flex;
        border: none;
        margin: 30px 30px;
        border-radius: 20px;
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
        background:#fff;
    }
        .item_product:hover {
            box-shadow: 0 8px 8px 8px PINK;
            transition:all 0.5s;
            transform:translateX(10px 10px);
        }

    ul {
        list-style: none;
    }

    .grid-container {
        display: grid;
        grid-template-rows: repeat(2, auto);
        grid-template-columns: repeat(3, auto);
        margin-left: 100px;
    }

    .home__left {
        padding-top: 40px;
    }

    .home__top {
        padding-bottom: 10px;
    }

    .grid-container__sp {
        display: grid;
        grid-template-rows: repeat(5, auto);
        grid-template-columns: repeat(5, auto);
        margin-left: 100px;
        margin: 50px;
    }

    .item_spnew {
        margin-right: 10px;
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
        @*background:#eee;*@
    }
    .item_spnew:hover {
        box-shadow: 0 8px 8px 8px PINK;
        transition: all 0.5s;
        transform: translateX(10px 10px);
    }
    .left__spnew {
        text-align: center;
    }

    .list__tytle__sp {
        text-align: center;
    }

    .grid-container__tv {
        display: grid;
        grid-template-rows: repeat(5, auto);
        grid-template-columns: repeat(5, auto);
        margin-left: 100px;
    }

    .menu {
        margin-bottom: 100px;
    }

    .menu__item {
        padding: 40px 40px;
        transition: all 0.5s ease-in-out;
        border-radius: 8px;
        box-shadow: 0 25px 98px 0 rgb(0 0 0 / 10%);
        position: relative;
        margin: 16px 0;
        background: #eee;
    }

        .menu__item:hover {
            box-shadow: 0 8px 8px 8px PINK;
        }

            .menu__item:hover .menu__heading i {
                color: var(--white);
                background-color: var(--primary-color);
            }

    .menu__heading {
        display: flex;
        justify-content: left;
        align-items: center;
    }

        .menu__heading i {
            display: block;
            font-size: 28px;
            color: var(--primary-color);
            padding: 24px;
            /* background-color: #eee; */
            border-radius: 6px;
            box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease-in-out;
        }

    .menu__content {
        padding-left: 36px;
    }

        .menu__content p {
            font-size: 18px;
            /* color: var(--font-color); */
            margin-bottom: 8px;
        }

        .menu__content h4 a {
            color: var(--primary-color);
            font-size: 24px;
            font-weight: 800;
            transition: all 0.5s;
        }

        .menu__content h4:hover a {
            color: var(--secondary-color);
        }

    .menu__body p {
        margin-top: 16px;
    }
    h4 {
        color: #ff8080;
        text-shadow: 1PX 2PX 3PX indigo;
        font-size: 40px;
        text-align: center;
    }
    .box {
        box-shadow: 0 2.8px 2.2px rgba(0, 0, 0, 0.034), 0 6.7px 5.3px rgba(0, 0, 0, 0.048), 0 12.5px 10px rgba(0, 0, 0, 0.06), 0 22.3px 17.9px rgba(0, 0, 0, 0.072), 0 41.8px 33.4px rgba(0, 0, 0, 0.086), 0 100px 80px rgba(0, 0, 0, 0.12);
        min-height: 70px;
        width: 30vw;
        margin: 50px auto;
        background: white;
        border-radius: 5px;
    }
</style>


