
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table, tr ,td{
        border:1px solid;
        padding:20px 20px;
        margin:20px 400px;
        font-size:20px;
        width:500px;
    }
    .btn {
        display: table;
    }
    .btn__tragop {
        margin-top: 20px;
    }
    .btn__trathe {
