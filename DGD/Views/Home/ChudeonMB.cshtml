@using DGD.MultipleModelInOneView
@using DGD.Models
@model ModelDanhMucs



    <ul class="menu-mb">

        @foreach (var item in Model.DANHMUCs)

        {

            <li style="list-style:none; padding-left:50px;">
                <a href="@Url.Action("ListSPDanhMuc", "Home" , new { id = item.MaDM , page = 1})"><b>@item.TenDM ▾</b> </a>

                @* danh muc con *@
                <ul class="dropdown">
                    @foreach (LoaiSP lOAISANPHAM in Model.LOAISANPHAMs)
                    {
                        if (lOAISANPHAM.MaDM == item.MaDM)
                        {
                            <li><a href="@Url.Action("ListSPLoai", "Home" , new { id = lOAISANPHAM.MaLsp , page = 1})">@lOAISANPHAM.LoaiSP1</a></li>
                        }
                    }

                </ul>
            </li>
        }
    </ul>



