@model IEnumerable<DGD.Models.DatHang>

@{
    ViewBag.Title = "QLDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2 style="text-align:center;">DANH SÁCH ĐƠN HÀNG</h2>
<table align="center" border="1" class="table" style="margin-left:230px;margin-top:60px;">
    <tr style="text-align:center; font-weight:bold">
        <th>
            Mã đơn hàng
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Tình trạng thanh toán
        </th>
        <th>
            Tình trạng giao hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Giao trước thời hạn
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
            </td>
            @if (item.Dathanhtoan == true)
            {
                <td>Đã thanh toán</td>
            }
            else
            {
                <td>Chưa thanh toán</td>
            }
            @if (item.Tinhtranggiaohang == true)
            {
                <td>Đã giao hàng</td>
            }
            else
            {
                <td>Đang chuẩn bị hàng</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaygiao)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "QLCTDH", new { madh = item.MaDH })
                <br />
                @Html.ActionLink("Đã thanh toán", "CapNhatThanhToan", new { madh = item.MaDH })
                <br />
                @Html.ActionLink("Đã giao hàng", "CapNhatGiaoHang", new { madh = item.MaDH })
            </td>
        </tr>
    }

</table>

