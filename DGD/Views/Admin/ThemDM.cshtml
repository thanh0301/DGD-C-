@model DGD.Models.DanhMuc
@{
    ViewBag.Title = "ThemDM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ThemDM</h2>

<div style="margin-left:300px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Danh Mục</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên danh mục
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm danh mục" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Trở lại quản lý danh mục", "DanhMuc")
    </div>
</div>

