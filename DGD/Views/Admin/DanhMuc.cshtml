@model IEnumerable<DGD.Models.DanhMuc>

@{
    ViewBag.Title = "DanhMuc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center;margin-left:200px;">DANH MỤC</h2>
<div style="margin-left:230px;">
    <p>
        @Html.ActionLink("Thêm danh mục mới", "ThemDM")
    </p>
    <table  class="table" border="1">
        <tr>
            <th>
                Danh mục
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDM)
                </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaDM", new { id = item.MaDM })
                </td>
            </tr>
        }

    </table>
</div>

