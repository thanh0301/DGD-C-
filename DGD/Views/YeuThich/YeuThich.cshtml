@using DGD.Models
@model List<YeuThich>
@{
    ViewBag.Title = "YeuThich";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Count == 0)
    {
        <h2 style="text-align:center;padding:30px 0 ;"> Bạn chưa có sản phẩm yêu thích nào</h2>
        <h3 style="text-align:center;padding:30px 0 ;">Hãy thêm sản phẩm bạn yêu thích</h3>
    }
else
    {
        <h2 style="text-align:center;padding:30px 0 ;">DANH SÁCH SẢN PHẨM YÊU THÍCH</h2>
        <table style="margin: 50px 500px;" align="center" border="1">
            <tr style="text-align:center; font-weight:bold">
                <td>Tên sản phẩm</td>
                <td>Ảnh</td>
                <td>Đơn giá</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="text-align:center; font-weight:bold">
                    <td><a href="@Url.Action("Detail", "Home", new { id = item.MaSP })">@item.SanPham.TenSp</a></td>
                    <td><img style="width:200px;" src="~/image/@item.SanPham.anh" /></td>
                    <td>@String.Format("{0:0,0}", item.SanPham.GiaBan)</td>
                    <td>
                        @Html.ActionLink("Xóa", "XoaYeuThich", new { @masp = item.MaSP, @makh = item.MaKH })
                    <br />
                    <a href="@Url.Action("ThemGioHang","Giohang", new {@iSanP = item.MaSP, @strURL=Request.Url.ToString()})">Thêm vào giỏ hàng</a>
                </td>
            </tr>
        }
        </table>
    }



