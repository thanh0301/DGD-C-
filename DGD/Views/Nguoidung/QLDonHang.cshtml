@model IEnumerable<DGD.Models.DatHang>

@{
    ViewBag.Title = "QLDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table style="margin-top:50px" align="center" border="1" class="table">
    <tr style="text-align:center; font-weight:bold">
        <th>
            Mã đơn hàng
        </th>
        <th>
            Tình trạng thanh toán
        </th>
        <th>
            Tình trạng giao hàng
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao dự kiến
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            @if (item.Dathanhtoan == true)
            {
                <td>Đã thanh toán</td>
            }
            else
            {
                <td>Chưa thanh toán</td>
            }
            @if (item.Tinhtranggiaohang == true)
            {
                <td>Đã giao hàng</td>
            }
            else
            {
                <td>Đang chuẩn bị hàng</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaygiao)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "QLCTDH", new { madh = item.MaDH })
            </td>
        </tr>
    }

</table>
