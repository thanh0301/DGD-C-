@model DGD.Models.KhachHang
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = Model;
}

<style>
    .profile {
        display: grid;
        justify-content: center;
    }

    .profile {
        height: 430px;
        width: 300px;
        background-color: #9fa4b0;
        box-shadow: 20px 10px 10px;
        justify-content: space-around;
    }
</style>

<div class="banner-bg-inner">
</div>

<div style="margin:100px 40%;"  class="myProfile" @*style="width:100%;display:flex; justify-content:center"*@>
    @using (Html.BeginForm(new { strURL = Request.Url.ToString() }))
    {
        Html.AntiForgeryToken();
        <form>
            <div class="profile">
                <h3 style="padding-bottom:20px;">THAY ĐỔI MẬT KHẨU</h3>
                <div class="form-group">
                    <label for="oldPassword">Mật khẩu cũ</label>
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="Mật khẩu cũ" />
                </div>
                <div class="form-group">
                    <label for="newPassword">Mật khẩu mới</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Mật khẩu mới">
                </div>
                <div class="form-group">
                    <label for="confirmNewPassword">Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" placeholder="Nhập lại mật khẩu mới">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="save-btn"><i class="fa fa-save"></i>Lưu</button>
                </div>
                <h3 id="Error">@ViewData["Error"]</h3>
                <h3 id="Success">@ViewData["Success"]</h3>
            </div>
        </form>
    }
    <script>
    addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
    }, false);
    function hideURLbar() {
        window.scrollTo({ top: 290, behavior: 'smooth' });
}
    </script>
</div>

